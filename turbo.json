{
	"$schema": "https://turborepo.dev/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".svelte-kit/**", "build/**", "dist/**"],
			"env": ["DATABASE_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "RESEND_API_KEY", "TRUSTED_ORIGINS"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format": {
			"dependsOn": ["^format"],
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
