{
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "vite": "^6.0.0"
  },
  "scripts": {
    "dev": "bun run --cwd apps/svelte dev",
    "check": "bun run --cwd apps/svelte check",
    "lint": "bun run --cwd apps/svelte lint && bun run --cwd apps/expo lint",
    "build:svelte": "bun run --cwd apps/svelte build",
    "build:android": "bun run --cwd apps/expo android"
  }
}
